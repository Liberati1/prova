# Create a new primary partition for LVM
- parted:
    device: "/dev/{{devdisk}}"
    number: "{{partition_number}}"
    flags: [ lvm ]
    state: present
  register: pv_created


# Read device information (always use unit when probing)
- parted: device="/dev/{{devdisk}}" unit=MiB
  register: sdb_info
